<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/cep_item_padBottom"
    android:paddingLeft="@dimen/cep_item_padLeft"
    android:paddingRight="@dimen/cep_item_padRight"
    android:paddingTop="@dimen/cep_item_padTop" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/cep_item_bg" >

        <FrameLayout
            android:id="@+id/j_img"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/cep_item_pic_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <TextView
            android:id="@+id/j_middle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/newsDetail"
            android:orientation="vertical"
            android:background="#88ffffff"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:layout_width="@dimen/cep_item_box_width"
            android:layout_height="@dimen/cep_item_box_height"
            android:layout_below="@id/j_middle" >
            <TextView
                android:id="@+id/title"
                android:textColor="#000000"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            <ImageView
                android:layout_marginTop="3dp"
                android:background="#000000"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                />	
            <TextView
                android:id="@+id/content"
                android:textColor="#000000"
                android:textSize="11dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/j_img"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/cep_mid_line" />

            <ImageView
                android:id="@+id/j_baoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/baoming_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/j_baoming"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cep_text_attend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cep_item_icon_attend"
                    android:textColor="#474647"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/j_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cep_text_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cep_item_icon_commit"
                    android:textColor="#474647"
                    android:textSize="10dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/j_t"
                android:src="@drawable/pinglun_icon" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>