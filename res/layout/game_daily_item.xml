<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical">
	<TextView
	    android:id="@+id/date"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_margin="10dp"
    	android:layout_marginLeft="10dp"
    	android:textColor="@color/game_daily_date"
    	android:textSize="14sp"
    	android:text="08:30 am">
	</TextView>
	<RelativeLayout 
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="15dp"
    	android:background="@android:color/white">
	    <Button 
	        android:id="@+id/game_add_btn"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentRight="true"
    		android:layout_marginRight="15dp"
    		android:layout_centerVertical="true"
    		/>
	    
	    <TextView 
	        android:id="@+id/game_title"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="10dp"
    		android:layout_marginTop="15dp"
    		android:layout_alignParentLeft="true"
    		android:layout_toLeftOf="@+id/game_add_btn"
    		android:text="男子游泳"
    		android:textColor="@color/game_daily_title"
    		android:textSize="14sp"/>
	    
	    <ImageView
	        android:id="@+id/game_loc_icon"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="10dp"
    		android:layout_marginRight="5dp"
    		android:layout_below="@+id/game_title"/>
	        
	    <TextView 
	        android:id="@+id/game_loc"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_below="@+id/game_title"
    		android:layout_toRightOf="@+id/game_loc_icon"
    		android:layout_toLeftOf="@+id/game_add_btn"
    		android:layout_marginLeft="10dp"
    		android:layout_marginTop="10dp"
    		android:layout_marginBottom="15dp"
    		android:textColor="@color/game_daily_loc"
    		android:textSize="13sp"
    		android:text="南京奥体中心"/>
	    
	    
	</RelativeLayout>
</LinearLayout>